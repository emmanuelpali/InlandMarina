@model IEnumerable<InlandMarina.Models.Slip>

@{
    ViewData["Title"] = "AuthorizedView";
}

<h1>AuthorizedView</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dock.Name)
            </td>
                @if (User.Identity.Name != null)
                {
                    <td>
                        <a asp-controller="Leases" asp-action="Create" asp-route-slipId="@item.ID" asp-route-customerId="@User.Identity.Name">Lease</a>
                    </td>

                }
        </tr>
}
    </tbody>
</table>
