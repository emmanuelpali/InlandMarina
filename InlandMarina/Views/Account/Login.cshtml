@model InlandMarina.Models.Customer
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form method="post" class="container row">
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
        <input asp-for="Username" class="form-control" placeholder="Please put in your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" placeholder="Please put in your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
    @*<input class="col-md-8" type="text" name="username" placeholder="Please put in your username" />
    <input type="text" name="password" placeholder="Please put in your password" />*@
    <button class="btn btn-primary">Login</button>
</form>
